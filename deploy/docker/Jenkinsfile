pipeline {
    agent any

    stages {
        stage("Test Repo") {
            steps {
                echo "Testing the repo"
            }
        }
        stage("Test that all env vars have been gathered correctly") {
            steps {
                echo "Testing that all env vars have been gathered correctly"
                
                echo "Options: ${env.OPTIONS}"
                echo "Account: ${env.AWS_ACCOUNT_ID}"
                echo "Subdomain: ${env.SUBDOMAIN}"
                echo "Repository: ${env.GIT_REPO}"
                echo "Branch: ${env.BRANCH}"
                echo "JenkinsFilePath: ${env.JENKINSFILE_PATH}"
            }
        }
    }
}
